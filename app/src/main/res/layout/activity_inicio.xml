<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.darthorg.virtualpay.JogoAberto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_inicio_dois"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransparente185"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banco_imobiliario"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Pay"
            android:textSize="22dp"
            android:textColor="@color/colorWhiteTransparente127"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <!--CartÃ£o-->
        <LinearLayout
            android:id="@+id/cartao"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/cor_cartao_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/corId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorTransparente"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/banco_imobiliario"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="25dp"/>
                <ImageView
                    android:id="@+id/bandeira"
                    android:layout_width="55dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="50dp"
                    android:src="@drawable/visa"/>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_margin="15dp"
                android:src="@drawable/chip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx  xxxx   xxxx  "
                    android:textColor="@color/colorWhite"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/valor_cartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:maxLength="9"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nome_jogador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Virtual Pay"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorWhite"/>

                <ImageButton
                    android:id="@+id/cor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cor_white"
                    android:layout_gravity="right"
                    android:background="@color/colorTransparente"
                    android:padding="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnComecar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cor_cartao_grey"
            android:text="@string/comecar"
            android:textSize="20dp"
            android:elevation="5dp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />








    </LinearLayout>









</RelativeLayout>
