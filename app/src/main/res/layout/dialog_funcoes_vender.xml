<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:padding="20dp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/btnVenderCasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorWhite"
                            android:src="@drawable/ic_casa"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casa"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/colorBlack"/>

                </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/btnVenderTitulos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:backgroundTint="@color/colorWhite"
                            app:fabSize="normal"
                            android:src="@drawable/ic_titulos"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulos"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"/>

                </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnVenderHipotecarTitulos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/colorWhite"
            app:fabSize="normal"
            android:src="@drawable/ic_hipotecar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hipotecar titulos"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

        </LinearLayout>