<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:background="@color/colorWhiteFundo"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noticia"
        android:textColor="@color/colorBlack"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VocÃª processou a construtora de um de seus Imoveis e ganhou a causa."
        android:textColor="@color/colorBlackTransparente185"
        android:textSize="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor RS "
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlackTransparente185"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/valorSorteReves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.000,00"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorVerdeLight"
            android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnReceber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/receber"
        android:textColor="@color/colorWhiteTransparente185"
        android:layout_margin="20dp"
        android:textSize="15dp"
        android:drawableRight="@drawable/ic_sorte_white"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:visibility="visible"
        android:textAlignment="center"
        android:backgroundTint="@color/colorVerdeLight"/>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/pagar"
        android:visibility="gone"
        android:textColor="@color/colorWhiteTransparente185"
        android:layout_margin="20dp"
        android:textSize="15dp"
        android:drawableRight="@drawable/ic_sorte_white"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:textAlignment="center"
        android:backgroundTint="@color/colorRed"/>


        </LinearLayout>